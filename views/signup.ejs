    <section id="home1">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <div class="card px-5 py-5" id="form1">
                        <form class="login-form" action="/signup" method="POST">
                            <div class="form-data" v-if="!submitted">

                                <div class="forms-inputs mb-4"> <span>Email </span> <input autocomplete="off"
                                        type="text" id="email" name="email">
                                </div>

                                <div class="forms-inputs mb-4"> <span>Name</span> <input autocomplete="off" type="text"
                                        id="name" name="name">

                                </div>
                                <div class="forms-inputs mb-4"> <span>City</span> <input autocomplete="off" type="text"
                                        id="city" name="city">

                                </div>
                                <div class="forms-inputs mb-4"> <span>State</span> <input autocomplete="off" type="text"
                                        id="state" name="state">

                                </div>
                                <div class="forms-inputs mb-4"> <span>Password</span> <input autocomplete="off"
                                        type="password" id="password" name="password">
                                </div>
                                <div class="forms-inputs mb-4"> <span>Confirm Pasword</span> <input autocomplete="off"
                                        type="password" id="cpassword" name="cpassword">

                                </div>
                                <div class="mb-3"> <button type="submit" class="btn btn-dark w-100">Signup</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

