<%- include('header.ejs') %>


    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>My orders</h2>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End Page title area -->


    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-content-right">
                        <div class="woocommerce">
                            <table cellspacing="0" class="shop_table cart">
                                <thead>
                                    <tr>
                                        <th class="product-remove">S.No</th>
                                        <!-- <th class="product-thumbnail">Status</th> -->
                                        <th class="product-name">Product Details</th>
                                        <th class="product-price">Date</th>
                                        <th class="product-quantity">Total Amount</th>
                                        <th class="product-subtotal"></th>
                                    </tr>
                                </thead>
                                <% if(o.length==0){%>
                                    <h1 style="text-align:center">No Orders Available</h1>
                                    <%}%>
                                        <tbody>
                                            <% let i=1; o.forEach(p=>{

                                                let total=0;
                                                <!-- console.log(total); -->
                                                p.userdetails.usercart.items.forEach(item=>{
                                                total=total+item.productprice*item.quantity;
                                                <!-- console.log(item.price); -->
                                                })

                                                %>
                                                <tr class="cart_item">


                                                    <td class="product-remove">

                                                        <%= i%>
                                                            <% i++%>


                                                    </td>

                                                    <td class="product-name">
                                                        <a href="/orderdetails/<%=p._id%>">
                                                            <p style="color:blue">Details</p>
                                                        </a>
                                                    </td>

                                                    <td class="product-price">
                                                        <span class="amount">
                                                            <%=new Date();%>
                                                        </span>
                                                    </td>

                                                    <td class="product-quantity">
                                                        <span class="amount">
                                                            $<%=total%>
                                                        </span>
                                                    </td>

                                                    <td class="product-subtotal">
                                                        <span class="amount">
                                                            <form action="/cancelorder" method="post">
                                                                <input type="hidden" value="<%=p._id%>" name="orderid">
                                                                <button type="submit">Cancel Order</button>
                                                            </form>
                                                        </span>
                                                    </td>
                                                </tr>
                                                <%})%>

                                        </tbody>
                            </table>


                            <div class="col-md-8 cart-collaterals">



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>


    <%- include('footer.ejs')%>